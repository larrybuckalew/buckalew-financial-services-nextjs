# Production Environment Configuration

# Application Settings
NODE_ENV=production
APP_NAME=Buckalew Financial Services
PORT=3000

# Database Configuration
DATABASE_URL=${PRODUCTION_DATABASE_URL}
DATABASE_TIMEOUT=3000
DATABASE_MAX_CONNECTIONS=50

# Authentication
NEXTAUTH_SECRET=${PRODUCTION_NEXTAUTH_SECRET}
NEXTAUTH_URL=https://app.buckalew-financial.com

# GoHighLevel Configuration
GHL_API_KEY=${PRODUCTION_GHL_API_KEY}
GHL_LOCATION_ID=${PRODUCTION_GHL_LOCATION_ID}
GHL_TASK_WORKFLOW_ID=${PRODUCTION_GHL_TASK_WORKFLOW_ID}

# Logging Configuration
LOG_LEVEL=error
LOG_FILE_SIZE_MB=100
LOG_MAX_FILES=10

# Security Settings
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
PASSWORD_SALT_ROUNDS=12

# Sentry Configuration
NEXT_PUBLIC_SENTRY_DSN=${PRODUCTION_SENTRY_DSN}
SENTRY_ENVIRONMENT=production
SENTRY_TRACES_SAMPLE_RATE=0.1

# Feature Flags
ENABLE_SIGNUP=false
ENABLE_PASSWORD_RESET=true
ENABLE_TWO_FACTOR_AUTH=true

# External Services
SMTP_HOST=${PRODUCTION_SMTP_HOST}
SMTP_PORT=587
SMTP_USER=${PRODUCTION_SMTP_USER}
SMTP_PASS=${PRODUCTION_SMTP_PASSWORD}

# OAuth Integrations
GOOGLE_CLIENT_ID=${PRODUCTION_GOOGLE_CLIENT_ID}
GOOGLE_CLIENT_SECRET=${PRODUCTION_GOOGLE_CLIENT_SECRET}