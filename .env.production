# Production Environment Configuration for Buckalew Financial Services

# Database Configuration
DATABASE_URL=actual_supabase_database_url
DATABASE_SCHEMA=public

# Authentication Providers
NEXTAUTH_SECRET=actual_nextauth_secret
NEXTAUTH_URL=https://buckalew-financial.vercel.app

# Google OAuth
GOOGLE_ID=actual_google_client_id
GOOGLE_SECRET=actual_google_client_secret

# Email Configuration
EMAIL_SERVER_HOST=actual_email_host
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=actual_email_username
EMAIL_SERVER_PASSWORD=actual_email_password
EMAIL_FROM="Buckalew Financial Services <noreply@buckalew.com>"

# Application Settings
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://buckalew-financial.vercel.app
NEXT_PUBLIC_APP_NAME=Buckalew Financial Services

# Security Configuration
CSRF_PROTECTION_ENABLED=true
CORS_ALLOWED_ORIGINS=https://buckalew-financial.vercel.app

# Feature Flags
ENABLE_INVESTMENTS=true
ENABLE_MULTI_FACTOR_AUTH=true

# Monitoring and Error Tracking
ERROR_TRACKING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true
SENTRY_DSN=actual_sentry_dsn
